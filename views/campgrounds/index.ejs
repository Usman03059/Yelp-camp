<% layout('/layout/boilerplate') %>
    <div id="cluster-map" class="mb-4"></div>
  

    <div class="row">
        <% campgrounds.forEach(function(campground) { %>
            <div class="col-sm-12 col-md-6 col-lg-4">
                <div class="card indexCards shadow border-0 mt-4">
                    <a href="/campgrounds/<%= campground._id %>"><img id="campgroundCard" class="card-img-top"
                            src='https://res.cloudinary.com/dnhum76lr/image/upload/v1703098240/Yelpcamp/vnfefnftl5cue6deq9r4.png'></a>
                    <div class="card-body text-center">
                        <h5 class="card-title text-capitalize" style="display: flex;
                justify-content: space-between">
                            <a href="/campgrounds/<%= campground._id %>">
                                <%= campground.title %>
                            </a>

                            <span><small class=" text-muted">$</small>
                                <%= campground.price%>
                            </span>


                        </h5>
                        <p class="mt-3 text-capitalize" style="font-size: large; font-weight:500">
                            <%=campground.description %>
                        </p>


                        <a class="btn btn-dark" href="/campgrounds/<%= campground._id %>">Details</a>

                    </div>

                </div>
            </div>
            <% }) %>
    </div>






    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
        const campgrounds = { features: <%- JSON.stringify(campgrounds) %>}
    </script>

    <script src="/javascript/clusterMap.js"></script>